@model IEnumerable<OnlineExamProject.Models.Course>

@{
    ViewData["Title"] = "Derslerim";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Derslerim</h2>
                <a asp-action="Create" class="btn btn-success">Yeni Ders Oluştur</a>
            </div>
            
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Ders Adı</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>Sınav Sayısı</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <td>@course.CourseName</td>
                                    <td>@course.CreatedAt?.ToString("dd.MM.yyyy")</td>
                                    <td>@course.Exams.Count</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-sm btn-warning">Düzenle</a>
                                        <form asp-action="Delete" asp-route-id="@course.CourseId" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bu dersi silmek istediğinizden emin misiniz?')">Sil</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h5>Henüz ders oluşturmadınız.</h5>
                    <p>İlk dersinizi oluşturmak için yukarıdaki butonu kullanabilirsiniz.</p>
                </div>
            }
        </div>
    </div>
</div>

