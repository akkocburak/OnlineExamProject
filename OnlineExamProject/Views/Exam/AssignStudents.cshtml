@model IEnumerable<OnlineExamProject.Models.User>

@{
    ViewData["Title"] = "Öğrenci Atama";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>@ViewBag.ExamTitle - Öğrenci Atama</h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="AssignStudents" method="post">
                        <input type="hidden" name="examId" value="@ViewBag.ExamId" />
                        
                        <div class="mb-3">
                            <label class="form-label">Sınava katılacak öğrencileri seçin:</label>
                        </div>

                        @if (Model != null && Model.Any())
                        {
                            <div class="row">
                                @foreach (var student in Model)
                                {
                                    <div class="col-md-6 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" 
                                                   name="selectedStudents" 
                                                   value="@student.UserId" 
                                                   id="student_@student.UserId">
                                            <label class="form-check-label" for="student_@student.UserId">
                                                @student.FullName (@student.Email)
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                Bu ders için öğrenci bulunamadı.
                            </div>
                        }

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Öğrencileri Ata
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Tümünü seç/seçme fonksiyonu
    function toggleAll() {
        var checkboxes = document.querySelectorAll('input[name="selectedStudents"]');
        var selectAllCheckbox = document.getElementById('selectAll');
        
        checkboxes.forEach(function(checkbox) {
            checkbox.checked = selectAllCheckbox.checked;
        });
    }
</script>
