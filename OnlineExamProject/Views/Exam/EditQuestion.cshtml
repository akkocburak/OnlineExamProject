@model OnlineExamProject.Models.Question

@{
    ViewData["Title"] = "Soru Düzenle";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Soru Düzenle</h2>
            <hr>

            <form asp-action="EditQuestion" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="QuestionId" />
                <input type="hidden" asp-for="ExamId" />

                <div class="mb-3">
                    <label class="form-label">Soru Metni</label>
                    <textarea asp-for="QuestionText" class="form-control" rows="3"></textarea>
                </div>

                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mb-3">
                        <img src="@Model.ImagePath" alt="Soru Resmi" class="img-fluid" style="max-height:200px;" />
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label">Yeni Resim (opsiyonel)</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">A) Seçenek</label>
                            <input asp-for="OptionA" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">B) Seçenek</label>
                            <input asp-for="OptionB" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">C) Seçenek</label>
                            <input asp-for="OptionC" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">D) Seçenek</label>
                            <input asp-for="OptionD" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">E) Seçenek</label>
                            <input asp-for="OptionE" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Seçenek Sayısı</label>
                            <input asp-for="OptionCount" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Puan</label>
                            <input asp-for="Points" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Doğru Cevap</label>
                    <select asp-for="CorrectOption" class="form-control">
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                        <option value="E">E</option>
                    </select>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a asp-action="AddQuestions" asp-route-examId="@Model.ExamId" class="btn btn-secondary">Geri</a>
                </div>
            </form>
        </div>
    </div>
</div>


