@model OnlineExamProject.Models.Exam

@{
    ViewData["Title"] = "Sınav Düzenle";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Sınav Düzenle</h2>
            <hr>
            
            @{
                var canEdit = DateTime.Now < Model.StartTime;
            }
            
            @if (!canEdit)
            {
                <div class="alert alert-warning">
                    <strong>Bu sınav başladığı için düzenlenemez!</strong>
                </div>
            }

            <!-- Sınav Temel Bilgileri -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Sınav Bilgileri</h5>
                </div>
                <div class="card-body">
                    @if (canEdit)
                    {
                        <form asp-action="Edit" method="post">
                            <input asp-for="ExamId" type="hidden" />
                            <input asp-for="TeacherId" type="hidden" />
                            <input asp-for="CreatedAt" type="hidden" />
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="ExamTitle" class="form-label">Sınav Başlığı</label>
                                        <input asp-for="ExamTitle" class="form-control" required />
                                        <span asp-validation-for="ExamTitle" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="CourseId" class="form-label">Ders</label>
                                        <select asp-for="CourseId" class="form-control" required>
                                            <option value="">Ders Seçin</option>
                                            @if (ViewBag.Courses != null)
                                            {
                                                @foreach (var course in (IEnumerable<OnlineExamProject.Models.Course>)ViewBag.Courses)
                                                {
                                                    <option value="@course.CourseId">@course.CourseName</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="CourseId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="StartTime" class="form-label">Başlangıç Tarihi</label>
                                        <input asp-for="StartTime" type="datetime-local" class="form-control" required />
                                        <span asp-validation-for="StartTime" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="EndTime" class="form-label">Bitiş Tarihi</label>
                                        <input asp-for="EndTime" type="datetime-local" class="form-control" required />
                                        <span asp-validation-for="EndTime" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="form-check">
                                    <input asp-for="AllowBackNavigation" class="form-check-input" type="checkbox" />
                                    <label asp-for="AllowBackNavigation" class="form-check-label">
                                        Öğrenciler sorulara geri dönebilir
                                    </label>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <button type="submit" class="btn btn-success">Sınav Bilgilerini Güncelle</button>
                                <a asp-action="Index" class="btn btn-secondary">İptal</a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Sınav Başlığı:</strong> @Model.ExamTitle</p>
                                <p><strong>Ders:</strong> @Model.Course.CourseName</p>
                                <p><strong>Başlangıç:</strong> @Model.StartTime.ToString("dd.MM.yyyy HH:mm")</p>
                                <p><strong>Bitiş:</strong> @Model.EndTime.ToString("dd.MM.yyyy HH:mm")</p>
                                <p><strong>Geri Dönüş:</strong> @(Model.AllowBackNavigation ? "İzin Veriliyor" : "İzin Verilmiyor")</p>
                            </div>
                        </div>
                        <div class="mb-3">
                            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                        </div>
                    }
                </div>
            </div>

            <!-- Öğrenci Atama -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Öğrenci Atama</h5>
                    @if (canEdit)
                    {
                        <a asp-action="AssignStudents" asp-route-examId="@Model.ExamId" class="btn btn-primary btn-sm">Öğrenci Ata/Düzenle</a>
                    }
                </div>
                <div class="card-body">
                    @if (ViewBag.AssignedStudents != null && ((IEnumerable<OnlineExamProject.Models.User>)ViewBag.AssignedStudents).Any())
                    {
                        <div class="row">
                            @foreach (var student in (IEnumerable<OnlineExamProject.Models.User>)ViewBag.AssignedStudents)
                            {
                                <div class="col-md-4 mb-2">
                                    <span class="badge bg-info">@student.FullName</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-muted">Henüz öğrenci atanmamış.</div>
                    }
                </div>
            </div>

            <!-- Soru Yönetimi -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Sorular</h5>
                    @if (canEdit)
                    {
                        <a asp-action="AddQuestions" asp-route-examId="@Model.ExamId" class="btn btn-primary btn-sm">Soru Ekle/Düzenle</a>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Questions != null && Model.Questions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Soru</th>
                                        @if (canEdit)
                                        {
                                            <th>İşlemler</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var q in Model.Questions)
                                    {
                                        <tr>
                                            <td>
                                                <div style="max-width: 400px; overflow: hidden; text-overflow: ellipsis;">
                                                    @(q.QuestionText.Length > 100 ? q.QuestionText.Substring(0, 100) + "..." : q.QuestionText)
                                                </div>
                                            </td>
                                            @if (canEdit)
                                            {
                                                <td>
                                                    <a asp-action="EditQuestion" asp-route-id="@q.QuestionId" class="btn btn-sm btn-outline-primary">Düzenle</a>
                                                    <form asp-action="DeleteQuestion" method="post" class="d-inline">
                                                        <input type="hidden" name="questionId" value="@q.QuestionId" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu soruyu silmek istediğinizden emin misiniz?')">Sil</button>
                                                    </form>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-muted">Bu sınava ait soru bulunamadı.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
